<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
    android:title="Настройки">
    <CheckBoxPreference
        android:key="magn"
        android:title="получать данные по всем осям"
        />
        <ListPreference
            android:key="time"
            android:title="частота таймера"
            android:defaultValue="1"
            android:entries="@array/timer"
            android:entryValues="@array/timer"
            android:dialogTitle="Выберите частоту записи по таймеру"
            />
        <ListPreference
            android:key="step"
            android:title="длина шага"
            android:defaultValue="1"
            android:entries="@array/steps"
            android:entryValues="@array/steps"
            android:dialogTitle="Выберите длину шага"
            />
    </PreferenceCategory>
</PreferenceScreen>